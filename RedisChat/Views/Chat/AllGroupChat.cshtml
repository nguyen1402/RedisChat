@model List<GroupChat>

@{
    ViewData["Title"] = "All Groups";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        <hr />
        <h3>ZOMO - Nơi gắn kết yêu thương</h3>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Password</th>
                    <th scope="col">Go</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (var group in Model)
                    {
                        <tr>
                            <td>@group.GroupName</td>
                            <td>@group.Password</td>
                            @if (string.IsNullOrEmpty(ViewBag.UserName))
                            {

                                <td><a class="btn btn-outline-danger" href="@Url.Action("JoinOrCreateGroupChat", "Chat")">Nhập Tên Đã</a></td>
                            }else
                            {

                                <td><a class="btn btn-outline-primary" href="@Url.Action("Index", "Chat", new { userName = ViewBag.UserName , groupName = group.GroupName })">Here</a></td>
                            }
                        </tr>
                    }
                }
                else
                {
                <td><p>Hiện tại bạn chưa tạo phòng nào !</p></td>
                }
            </tbody>
        </table>
    </div>
</body>
</html>


